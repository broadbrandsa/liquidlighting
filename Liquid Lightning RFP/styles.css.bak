:root {
    /* Premium Palette - Light & Airy */
    --color-bg: #FFFFFF;
    --color-bg-alt: #F1F1F1;
    /* Slightly warmer gray */
    --color-text: #171717;
    /* High contrast dark gray, almost black */
    --color-text-muted: #525252;
    --color-text-light: #737373;
    --color-primary: #171717;
    /* Primary actions are black */
    --color-accent: #5c4ee3;
    /* Keep brand accent for subtle highlights */
    --color-border: #E5E5E5;

    /* Typography */
    --font-main: 'Poppins', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;

    /* Spacing */
    --spacing-xs: 8px;
    --spacing-sm: 16px;
    --spacing-md: 32px;
    --spacing-lg: 64px;
    --spacing-xl: 96px;
    /* Generous breathing room */
    --spacing-2xl: 160px;

    /* Shadows & Radius */
    --radius-sm: 8px;
    --radius-md: 20px;
    /* Softer, larger radius */
    --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.04);
    --shadow-hover: 0 12px 32px rgba(0, 0, 0, 0.08);

    /* Max Widths */
    --max-width: 1400px;
    --content-width: 720px;
    /* Editorial column width */

    /* Dynamic Layout Gutters */
    --page-gutter: 15%;
}

@media (max-width: 768px) {
    :root {
        --page-gutter: 5%;
    }
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: var(--color-bg);
    color: var(--color-text);
    font-family: var(--font-main);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    font-size: 16px;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

/* ==================== TYPOGRAPHY ==================== */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 500;
    line-height: 1.2;
    color: var(--color-text);
}

h1,
.h1 {
    font-size: 54px;
}

h2,
.h2 {
    font-size: 42px;
}

h3,
.h3 {
    font-size: 32px;
}

h4,
.h4 {
    font-size: 24px;
}

h5,
.h5 {
    font-size: 10px;
}

p,
.p1 {
    font-size: 16px;
}

.p2 {
    font-size: 12px;
}

a {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
    transition: opacity 0.2s ease;
}

a:hover {
    opacity: 0.6;
}

/* ==================== HEADER ==================== */
/* Keeping header simple and sticky */
.main-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px var(--spacing-lg);
    position: sticky;
    top: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    z-index: 1000;
    border-bottom: 1px solid var(--color-border);
}

.logo {
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.03em;
}

.sub-logo {
    color: var(--color-text-muted);
    font-weight: 400;
}

nav ul {
    display: flex;
    gap: 32px;
    list-style: none;
}

nav a {
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text-muted);
}

nav a:hover {
    color: var(--color-text);
}

/* ==================== HERO SECTION ==================== */
/* Minimalist Hero */
.hero-section {
    padding: var(--spacing-2xl) var(--spacing-lg);
    text-align: left;
    /* Editorial alignment */
    max-width: 100%;
    /* Override max-width to allow full bleed image */
    margin: 0 auto;
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8)), url("Images/brian-mcgowan-rn7JMw8hJmc-unsplash.jpg");
    background-size: cover;
    background-position: center;
    color: #FFFFFF;
}

.hero-content {
    max-width: 900px;
}

.hero-eyebrow {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--spacing-sm);
    font-weight: 500;
}

.hero-title {
    font-size: clamp(3rem, 5vw, 4.5rem);
    letter-spacing: -0.04em;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    line-height: 1.1;
    color: #FFFFFF;
}

.hero-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    max-width: 700px;
    margin-bottom: var(--spacing-lg);
}

.hero-logos {
    display: flex;
    gap: 24px;
    margin-bottom: 48px;
}

.hero-logo-item {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--color-bg-alt);
    padding: 12px 20px;
    border-radius: 100px;
}

.hero-logo-item img {
    height: 20px;
    filter: grayscale(1);
    opacity: 0.8;
}

.hero-logo-item span {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-text-muted);
}

.hero-meta {
    display: flex;
    gap: 48px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 24px;
}

.hero-meta-item strong {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 4px;
    letter-spacing: 0.05em;
}

/* ==================== SECTION LAYOUT ==================== */
.section {
    padding: var(--spacing-xl) var(--spacing-lg);
}

.section--white {
    background: var(--color-bg);
}

.section--gray {
    background: var(--color-bg-alt);
}

.section__container {
    max-width: var(--max-width);
    margin: 0;
}

.section__header {
    margin-bottom: var(--spacing-lg);
    max-width: var(--content-width);
}

/* B. Section Label Pattern */
.eyebrow-pill {
    display: inline-block;
    padding: 6px 14px;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    background: var(--color-bg);
    margin-bottom: 24px;
}

.section__title {
    font-size: 3rem;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
}

.section__subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-weight: 400;
    line-height: 1.5;
}

/* ==================== EDITORIAL CONTENT ==================== */
/* Narrow column for reading */
p {
    margin-bottom: 24px;
    color: var(--color-text-muted);
}

.narrative-block,
.split-content__text {
    font-size: 1.125rem;
    line-height: 1.8;
}

strong {
    color: var(--color-text);
    font-weight: 600;
}

/* Grid Layouts */
.split-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
}

@media (max-width: 900px) {
    .split-section {
        grid-template-columns: 1fr;
        gap: 40px;
    }
}

/* ==================== HORIZONTAL CARD LAYOUT ==================== */
/* This is the critical Shopify-style carousel replication */

.horizontal-scroll-container {
    display: flex;
    gap: 24px;
    overflow-x: auto;
    padding-bottom: 40px;
    /* Space for shadow */
    margin-right: calc(var(--spacing-lg) * -1);
    /* Break out of container on right */
    padding-right: var(--spacing-lg);

    /* Hide scrollbars */
    -ms-overflow-style: none;
    scrollbar-width: none;
}

.horizontal-scroll-container::-webkit-scrollbar {
    display: none;
}

/* Card Styling */
.offering-card,
.offering-block,
.feature-card,
.pricing-card {
    min-width: 440px;
    /* Fixed width for consistent cards */
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: 0;
    /* Reset */
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
}

.offering-card:hover,
.feature-card:hover,
.pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
}

.offering-card__image {
    width: 100%;
    height: 240px;
    object-fit: cover;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg-alt);
}

.offering-card__content,
.feature-card,
.pricing-card__body {
    padding: 32px;
}

/* Reuse existing structure for cards that weren't rewritten */
.offering-block {
    min-width: 400px;
    padding: 32px;
}

.offering-header h3,
.feature-card__title {
    font-size: 1.5rem;
    margin-bottom: 16px;
    font-weight: 600;
}

.offering-grid {
    margin-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.offering-detail h4 {
    font-size: 0.85rem;
    text-transform: uppercase;
    color: var(--color-text-light);
    margin-bottom: 8px;
    letter-spacing: 0.05em;
}

.offering-detail p {
    font-size: 0.95rem;
    margin-bottom: 0;
}

/* ==================== FEATURE GRID (Partners) ==================== */
.feature-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-top: 32px;
}

/* Override carousel styles for grid usage */
.feature-cards .feature-card {
    min-width: 0;
}

@media (max-width: 768px) {
    .feature-cards {
        grid-template-columns: 1fr;
    }
}

/* ==================== TIMELINE ==================== */
.timeline {
    border-left: 2px solid var(--color-border);
    margin-left: 20px;
    padding-left: 40px;
}

.timeline-item {
    position: relative;
    margin-bottom: 48px;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -49px;
    /* Align with border center */
    top: 0;
    width: 16px;
    height: 16px;
    background: var(--color-bg);
    border: 4px solid var(--color-text);
    border-radius: 50%;
}

.timeline-item__date {
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
}

.timeline-item__title {
    font-size: 1.5rem;
    margin-bottom: 8px;
}

/* ==================== PRICING ==================== */
.pricing-cards {
    display: flex;
    /* Override grid */
    gap: 24px;
}

.pricing-card {
    min-width: 0;
    /* Let flex handle width */
    flex: 1;
}

.pricing-card__header {
    background: var(--color-bg-alt);
    padding: 32px;
    border-bottom: 1px solid var(--color-border);
}

.pricing-card__title {
    font-size: 1.25rem;
    font-weight: 500;
}

.pricing-card__price {
    font-size: 2.5rem;
    font-weight: 600;
    margin-top: 8px;
}

.pricing-card__list li {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--color-border);
}

/* ==================== FOOTER ==================== */
footer {
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
    padding: 80px var(--page-gutter) 40px;
}

.footer__container {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 48px;
    margin-bottom: 80px;
    max-width: var(--max-width);
}

.footer__brand {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.footer__brand::before {
    /* Optional: Add a brand mark if desired, but sticking to text for now */
    content: '';
}

.footer__title {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 24px;
    color: var(--color-text);
}

.footer__text {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 0;
    max-width: 300px;
}

.footer__bottom {
    border-top: 1px solid var(--color-border);
    padding-top: 32px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
}

.footer__copyright {
    font-size: 0.9rem;
    color: #9CA3AF;
    /* Light gray copyright */
}

.footer__logos {
    display: flex;
    gap: 24px;
}

.footer__logos img {
    height: 24px;
    width: auto;
    object-fit: contain;
}

/* Tech Stack Icons */
.tech-stack-icons {
    display: flex;
    gap: 12px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 12px;
}

.tech-stack-icon {
    height: 16px;
    width: auto;
    object-fit: contain;
    opacity: 1;
    transition: opacity 0.2s ease;
}

.tech-stack-icon:hover {
    opacity: 1;
}

/* Responsive Footer */
@media (max-width: 1024px) {
    .footer__container {
        grid-template-columns: 1fr 1fr;
        gap: 40px;
    }
}

@media (max-width: 768px) {
    .footer__container {
        grid-template-columns: 1fr;
    }

    .footer__bottom {
        flex-direction: column-reverse;
        align-items: flex-start;
    }
}

/* ==================== ACCORDION ==================== */
details {
    border-bottom: 1px solid var(--color-border);
    padding: 24px 0;
    margin: 0;
}

details:first-of-type {
    border-top: 1px solid var(--color-border);
}

summary {
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 4px 0;
}

summary::-webkit-details-marker {
    display: none;
}

summary h4 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
}

summary::after {
    content: '+';
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-text-muted);
    transition: transform 0.2s ease;
}

details[open] summary::after {
    content: 'âˆ’';
}

.accordion-content {
    margin-top: 16px;
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
}